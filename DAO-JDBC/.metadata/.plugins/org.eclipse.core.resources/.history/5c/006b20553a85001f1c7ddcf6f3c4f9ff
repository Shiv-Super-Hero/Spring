package com.shivaji.jdbc;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

public class JdbcApp {

	public static void main(String[] args) throws Exception{
		Class.forName("oracle.jdbc.OracleDriver");
		Connection conn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","durga");
		Statement st = conn.createStatement();
		st.addBatch("insert into emp1 values(666,'FFF',8200,'Manali')");
		st.addBatch("update emp1 set esal = esal+500 where esal < 8600");
		st.addBatch("delete from emp1 where eno = 333");
		int[] rowCount = st.executeBatch();
		
		for(int i = 0; i < rowCount.length; i++) {
			System.out.println("Row Count : "+rowCount[i]);
		}
		st.close();
		conn.close();
	}

}
